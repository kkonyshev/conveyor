<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.2.xsd">	

	<context:component-scan base-package="conveyor"/>
	<context:annotation-config/>

	<bean id="lockedQuque" class="conveyor.impl.LockedQuqueImpl"/>
	<bean id="consumerRegistry" class="conveyor.impl.ConsumerRegistryImpl"/>
	
	<bean id="consumer" class="conveyor.impl.ConsumerImpl" scope="prototype"/>
	<bean id="producer" class="conveyor.impl.ProducerImpl" scope="prototype"/>
	
	<bean id="threadProcessor" class="conveyor.impl.ThreadProcessorImpl" scope="prototype"/>	
</beans>